<h1>Listing Sessions</h1>

<table class="table table-bordered table-striped">
<thead>
  <tr>
    <th>Title</th>
    <th>Start</th>
    <th>End</th>
    <th>Location</th>
    <th>Session type</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
<% @sessions.each do |session| %>
  <tr>
    <td><%= session.title %></td>
    <td><%= session.start %></td>
    <td><%= session.end %></td>
    <td><% unless session.location.nil? %>
      <%= session.location.name %>
    <% end %></td>
    <td><% unless session.session_type.nil? %>
      <%= session.session_type.title %>
    <% end %></td>
    <td><%= link_to 'Show', session %></td>
    <td><%= link_to 'Edit', edit_session_path(session) %></td>
    <td><%= link_to 'Destroy', session, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
<tfoot>
	<tr><td colspan="8">
		<%= link_to 'New Session', new_session_path %>
	</td></tr>
</tfoot>
</tbody>
</table>


