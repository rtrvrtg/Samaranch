<%= form_for(@guest, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
      <% @guest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= bootstrap_field f, :name do %>
    <%= f.text_field :name %>
  <% end %>
  <%= bootstrap_field f, :photo do %>
    <%= f.file_field :photo %>
  <% end %>
  <%= bootstrap_field f, :sorting_name do %>
    <%= f.text_field :sorting_name %>
  <% end %>
  <%= bootstrap_field f, :bio do %>
    <%= f.text_area :bio %>
  <% end %>
  <%= bootstrap_field f, :website do %>
    <%= f.text_area :website %>
  <% end %>
  <%= bootstrap_field f, :twitter do %>
    <%= f.text_area :twitter %>
  <% end %>
  <%= bootstrap_field f, :facebook do %>
    <%= f.text_area :facebook %>
  <% end %>
  
  <%= bootstrap_field f, :sessions do %>
    <%= collection_select(:guest, 
                          :sessions, 
                          Session.all, 
                          :id, 
                          :title, 
                          {}, {
                          	:multiple => 'true'
                          }) %>
  <% end %>
  
  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
