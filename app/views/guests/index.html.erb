<h1>Listing guests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sorting name</th>
    <th>Bio</th>
    <th>Website</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%= guest.name %></td>
    <td><%= guest.sorting_name %></td>
    <td><%= guest.bio %></td>
    <td><%= guest.website %></td>
    <td><%= guest.twitter %></td>
    <td><%= guest.facebook %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

