<h1>Listing sponsors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sponsor type</th>
    <th>Description</th>
    <th>Website</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sponsors.each do |sponsor| %>
  <tr>
    <td><%= sponsor.name %></td>
    <td><%= sponsor.sponsor_type_id %></td>
    <td><%= sponsor.description %></td>
    <td><%= sponsor.website %></td>
    <td><%= sponsor.twitter %></td>
    <td><%= sponsor.facebook %></td>
    <td><%= sponsor.location_id %></td>
    <td><%= link_to 'Show', sponsor %></td>
    <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
    <td><%= link_to 'Destroy', sponsor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

