<h1>Listing Sponsors</h1>

<table class="table table-bordered table-striped">
<thead>
  <tr>
    <th>Name</th>
    <th>Sponsor type</th>
    <th>Location</th>
    <th>Logo</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
<% @sponsors.each do |sponsor| %>
  <tr>
    <td><%= sponsor.name %></td>
    <td><% unless sponsor.sponsor_type.nil? %>
      <%= sponsor.sponsor_type.title %>
    <% end %></td>
    <td><% unless sponsor.location.nil? %>
      <%= sponsor.location.name %>
    <% end %></td>
    <td><% unless @sponsor.logo.nil? %>
      <%= image_tag @sponsor.logo.url(:smallthumb) %>
    <% end %></td>
    <td><%= link_to 'Show', sponsor %></td>
    <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
    <td><%= link_to 'Destroy', sponsor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
<tfoot>
	<tr><td colspan="7">
		<%= link_to 'New Sponsor', new_sponsor_path %>
	</td></tr>
</tfoot>
</tbody>
</table>


