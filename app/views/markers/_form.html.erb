<div class="row-fluid">

<%= form_for(@marker, :html => {:class => "form-horizontal span6"}) do |f| %>
  <% if @marker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@marker.errors.count, "error") %> prohibited this marker from being saved:</h2>

      <ul>
      <% @marker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= bootstrap_field f, :title do %>
    <%= f.text_field :title %>
  <% end %>
  <%= bootstrap_field f, :anchor_x do %>
    <%= f.number_field :anchor_x %>
  <% end %>
  <%= bootstrap_field f, :anchor_y do %>
    <%= f.number_field :anchor_y %>
  <% end %>
  <%= bootstrap_field f, :marker_image do %>
    <%= f.file_field :marker_image %>
  <% end %>
  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
<div id="location-edit-container" class="span6" style="overflow: auto;">

<div id="marker-container">
<% if !@marker.marker_image.nil? %>
<%= image_tag @marker.marker_image.url %>
<% end %>
</div>

<div id="map-container"></div>
</div>

</div>

<script type="text/javascript">
$(document).ready(function(){

var LML = new Samaranch.LocationMarkerLoc({
	container: 'marker-container',
	x_dst: 'marker_anchor_x',
	y_dst: 'marker_anchor_y'
});

});
</script>
