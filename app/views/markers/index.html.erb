<h1>Listing Markers</h1>

<table class="table table-bordered table-striped">
<thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
<% @markers.each do |marker| %>
  <tr>
    <td><%= image_tag marker.marker_image.url(:smallthumb) %> <%= marker.title %></td>
    <td><%= link_to 'Show', marker %></td>
    <td><%= link_to 'Edit', edit_marker_path(marker) %></td>
    <td><%= link_to 'Destroy', marker, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
<tfoot>
	<tr><td colspan="4">
		<%= link_to 'New Marker', new_marker_path %>
	</td></tr>
</tfoot>
</tbody>
</table>


