<%= form_for(@venue_map, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @venue_map.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@venue_map.errors.count, "error") %> prohibited this venue_map from being saved:</h2>

      <ul>
      <% @venue_map.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :venue_id %>
    <div class="controls"><%= collection_select(:venue_map, 
